<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hello_world"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.example.helloworld.HelloWorld">


    <Button
        android:text="TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonradio"
        android:layout_alignEnd="@+id/buttonradio"
        android:layout_marginBottom="29dp"
        android:id="@+id/buttontv"
        android:visibility="visible"
        android:elevation="6dp"
        style="@android:style/Widget.Button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Willkommen!"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:contentDescription="Begrüßung"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textSize="20sp" />

    <TextView
        android:text="Worüber möchten Sie sich informieren?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginTop="50dp"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="NEWS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonnews"
        style="@android:style/Widget.Button"
        android:visibility="visible"
        android:elevation="6dp"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="112dp"
        android:layout_above="@+id/buttontv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="RADIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonradio"
        android:elevation="6dp"
        android:visibility="visible"
        android:layout_above="@+id/buttontv"
        android:layout_alignLeft="@+id/buttonnews"
        android:layout_alignStart="@+id/buttonnews"
        android:layout_marginBottom="33dp"
        style="@android:style/Widget.Button" />
</RelativeLayout>
